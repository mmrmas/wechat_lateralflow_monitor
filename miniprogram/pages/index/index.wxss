

.productPageButtonsContainer{
  display:flex;
  flex-wrap: wrap;
  width:100%;
  justify-content: space-around;
  height:220rpx;
}
 
.productPageButtons{
  display:flex;
  flex: 1 0; 
  height:150rpx;
  width:150rpx;
  margin: 5rpx;
  border-style: outset;
  border-radius: 20rpx;
  align-items: center;
  justify-content: center;  
  position: relative;  
  border-width: 1rpx;
}

.meat{ 
background-color: #6a180aaf;
}
 
.aqua{
  background-color: #1CADB6;
}
 
.fruitsvegs{
 background-color: #92c06d;
}

.dairyeggs{
  background-color: #c1b16c;
}

.buttonImage{
  height: 80%;
  width: 80%;
  margin:5% 10% 15% 10%;
}
 
.buttontext{
  position: absolute;
  top:155rpx;
  padding:5rpx;
  text-align: center;
}

.image_top{
  width:100%;
  height:100%;
  animation: zoom 5s;
  /* When the animation is finished, start again */
  animation-iteration-count: 1;
}

@keyframes zoom {
  0% { transform: scale(1.2) translate(-50rpx,0rpx);}
  10% { transform: scale(1.2) translate(-50rpx,0rpx);}
  20% { transform: scale(1.2) translate(-50rpx,0rpx);}
  30% { transform: scale(1.2) translate(-50rpx,0rpx);}
  100% { transform: scale(1);}
}
